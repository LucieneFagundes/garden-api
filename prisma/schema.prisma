// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  name       String
  email      String   @unique
  password   String
  created_at DateTime @default(now())
  plants     Plant[]

  @@map("users")
}

model Plant {
  id         String   @id @default(uuid())
  name       String
  species    String?
  photo      String?
  notes      String?
  created_at DateTime @default(now())
  updated_at DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id])
  userId String

  activities ActivityCycle[]

  @@map("plants")
}

model ActivityCycle {

  id String @id @default(uuid())
  activity  Activity
  period    Period
  period_qd Int
  notes     String?
  created_at DateTime @default(now())
  updated_at DateTime @default(now())

  plant   Plant  @relation(fields: [plantId], references: [id])
  plantId String
  
  @@map("activities_cycle")
}

enum Activity {
  regar
  fertilizar
  imersao
  umidificacao
  transplante
}

enum Period {
  dia
  semana
  mes
}
